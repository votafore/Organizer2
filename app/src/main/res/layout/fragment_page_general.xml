<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card:cardElevation="4dp"
    card:cardBackgroundColor="#dcdcdc">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:hint="@string/title_hint"/>

        <EditText
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="20sp"
            android:paddingStart="5dp"
            android:hint="@string/title_description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Дата старта :"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:gravity="center|left"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8 Марта 2016 (вт)"
                android:textSize="25sp"
                android:layout_weight="1"
                android:gravity="center|end"
                android:paddingEnd="5dp"/>

            <Button
                android:id="@+id/btn_edit_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Время старта :"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:gravity="center|left"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="18:00"
                android:textSize="25sp"
                android:layout_weight="1"
                android:gravity="center|end"
                android:paddingEnd="5dp"/>

            <Button
                android:id="@+id/btn_edit_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>